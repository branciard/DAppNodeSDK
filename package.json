  "description": "dappnodesdk is a tool to make the creation of new dappnode packages as simple as possible. It helps to initialize and publish in ethereum blockchain",
  "main": "dappnodesdk.js",
  "scripts": {
    "test": "mocha \"./{,!(node_modules)/**}/*.test.js\" ",
    "lint": "npm run lint:javascript",
    "lint:javascript": "eslint . --ext js --fix"
  },
  "bin": {
    "dappnodesdk": "./src/dappnodesdk.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dappnode/DAppNodeSDK.git"
  },
  "keywords": [
    "cli",
    "dappnode",
    "ethereum"
  ],
  "author": "DAppNode Association <admin@dappnode.io> (https://github.com/dappnode)",
  "contributors": [
    "Eduardo Antu√±a <eduadiez@gmail.com> (https://github.com/eduadiez)",
    "dappLion (https://github.com/dapplion)"
  ],
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dappnode/DAppNodeSDK/issues"
  },
  "homepage": "https://github.com/dappnode/DAppNodeSDK#readme",
  "dependencies": {
    "@aragon/os": "^4.0.0-alpha.2",
    "chalk": "^2.4.1",
    "commander": "^2.17.1",
    "ethereum-ens": "^0.7.4",
    "execa": "^1.0.0",
    "figlet": "^1.2.0",
    "inquirer": "^6.2.0",
    "ipfs-api": "^26.1.2",
    "js-yaml": "^3.12.0",
    "semver": "^5.5.1",
    "web3": "^1.0.0-beta.36",
    "web3-utils": "^1.0.0-beta.36"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.10.0",
    "eslint-config-google": "^0.11.0",
    "mocha": "^5.2.0",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "documentation lint",
        "git add"
      ]
    }
  }
